import java.util.ArrayList;


public class MapTester {
	public static void main(String[] args){
		boolean[][] walls = {{false,false,false,false},{false,false,false,false},{false,false,false,false},{false,false,false,false}};
		
		Map map = new Map(4,1);
		
		map.addWalls(walls);
		
		map.populate();
		if(map.getWalls() != null){
			for(GridSquare s : map.getWalls()){
				System.out.println(s.getX() + " , " + s.getY());
			}
		}
		

		ArrayList<Ghost> gs = new ArrayList<Ghost>();
		Ghost g = new Ghost(0,0,"S",map);
		g.move();
		gs.add(g);
		for(Ghost goul : gs){
			System.out.println(g.getX() + " , " + g.getY() + " , " + g.getOrientation() + " , " + g.wallinFront());
		}
		System.out.println(map.getSize());
		//System.out.println(g.getX() + " , " + g.getY() + " , " + g.getOrientation() + " , " + g.wallinFront());
		

		System.out.println("Hello");
	}
}
