import lejos.nxt.Button;
import lejos.nxt.LCD;
import lejos.nxt.Motor;
import lejos.nxt.NXTRegulatedMotor;


public class Simon {
	public static void main(String[] args) {
		int buttonChoice;
		
		//Initialize EVERYTHING HERE DAMMIT
		
		NXTRegulatedMotor left = Motor.A;
		NXTRegulatedMotor right = Motor.B;
		
		Odometer odometer = new Odometer();
		
		LCDDisplay display = new LCDDisplay(odometer);

		do {
			// clear the display
			LCD.clear();

			// ask the user whether the motors should drive in a square or float
			LCD.drawString("< Left | Right >", 0, 0);
			LCD.drawString("       |        ", 0, 1);
			LCD.drawString("  Claw | Drive  ", 0, 2);
			LCD.drawString("       |        ", 0, 3);
			LCD.drawString("       |        ", 0, 4);

			buttonChoice = Button.waitForAnyPress();
		} while (buttonChoice != Button.ID_LEFT
				&& buttonChoice != Button.ID_RIGHT);

		if (buttonChoice == Button.ID_LEFT) {
			NXTRegulatedMotor ClawMotor = Motor.C;
			ClawMotor.flt();
			LCD.clear();
			while(true){
				LCD.drawString("Claw Tachometer", 0, 0);
				LCD.drawInt(ClawMotor.getTachoCount(), 0, 1);
				if(Button.waitForAnyPress() == Button.ID_ESCAPE){
					break;
				}
			}


		} else {

		}
		
		while (Button.waitForAnyPress() != Button.ID_ESCAPE);
		System.exit(0);
	}
}
